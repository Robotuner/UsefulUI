<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsefulUI.Views.MultiColumnGrid.MGCheckBoxFilter">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" BackgroundColor="White">
            <CheckBox x:Name="cbox" IsChecked="{Binding IsSelected}" VerticalOptions="Center" Color="Purple"/>
            <Label x:Name="description" Text="{Binding Name}" VerticalOptions="Center" LineBreakMode="WordWrap" TextColor="Green"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>