<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsefulUI.Views.TestTemplateView">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal">
            <CheckBox x:Name="cbox" IsChecked="{Binding IsSelected}" VerticalOptions="Center"/>
            <Label x:Name="description" Text="{Binding Name}" VerticalOptions="Center" />
        </StackLayout>
    </ContentView.Content>
</ContentView>